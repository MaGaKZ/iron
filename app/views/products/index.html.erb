<div class="category-title"id="main-title">
  <h4>Все продукции</h4>
</div>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Продукция</th>
      <th>Профиль</th>
      <th>Длина</th>
      <th>Цена</th>
    </tr>
    </thead>
    <tbody>
     <% @products.each do |product| %>
      <tr>
        <td><%=link_to product.name,product %></td>
        <td><%= product.size %></td>
        <td> <%= product.length %></td>
        <td>  <%= product.price %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<%= link_to 'New Product', new_product_path %>