<div class="row">
	<div class="col-md-3">
		<%=image_tag @category.photo.url%>
	</div>
	<div class="col-md-9">
		<div class="category-title"id="main-title">
			<h4><%=@category.name%></h4>
		</div>
	</div>
</div>
<table class="table table-hover">
	<thead>
		<tr>
			<th>Продукция</th>
			<th>Профиль</th>
			<th>Длина</th>
			<th>Цена</th>
		</tr>
	</thead>
	<tbody>
		<%@products.where(:category_id=>@category.id).each do |product|%>
		<tr>
			<td><%=link_to product.name, product%></td>
			<td><%= product.size %></td>
			<td> <%= product.length %></td>
			<td>  <%= product.price %></td>
		</tr>
		<% end %>
	</tbody>
</table>